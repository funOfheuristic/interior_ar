<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id='@+id/sceneform_ux_fragment'
        android:name="com.google.ar.sceneform.ux.ArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">



            <ImageView
                android:id="@+id/chair"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/chair"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>


            <ImageView
                android:id="@+id/newsofa"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/newsofa"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <ImageView
                android:id="@+id/couch"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/couch"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <ImageView
                android:id="@+id/buddha"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/buddha"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <ImageView
                android:id="@+id/bedroom"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/bedroom"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

        </LinearLayout>

    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/green"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text=""
            android:background="@android:color/holo_green_light"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="10dp"
            android:onClick="setColour"/>

        <Button
            android:id="@+id/black"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@+id/green"
            android:background="@android:color/black"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:onClick="setColour"/>

        <Button
            android:id="@+id/gray"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerVertical="true"
            android:layout_below="@+id/black"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:onClick="setColour"/>

    </RelativeLayout>



</FrameLayout>